{
  "name": "plangrid-helpdesk",
  "version": "0.0.1",
  "description": "Modern static templates for PlanGrid's Helpdesk.",
  "author": {
    "name": "Jesse Dodds",
    "email": "desk@jessedodds.com",
    "url": "http://jessedodds.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jessedodds/pg-helpdesk-test"
  },
  "bugs": {
    "url": "https://github.com/jessedodds/pg-helpdesk-test/issues"
  },
  "private": false,
  "scripts": {
    "clean": "rm -r bundle || true",
    "prebuild": "npm run clean",
    "build": "webpack --progress",
    "build:watch": "npm run build -- --watch",
    "lint:js": "eslint . --ignore-pattern bundle || true",
    "lint:css": "stylelint **/**/*.css || true",
    "start": "http-server -o"
  },
  "dependencies": {
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "browser-sync": "^2.12.3",
    "browser-sync-webpack-plugin": "^1.0.1",
    "css-loader": "^0.23.1",
    "dom4": "^1.8.2",
    "domready": "^1.0.8",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "imports-loader": "^0.6.5",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^8.1.0",
    "postcss-loader": "^0.8.2",
    "postcss-pxtorem": "^3.3.1",
    "postcss-reporter": "^1.3.3",
    "style-loader": "^0.13.1",
    "svgxuse": "^1.1.16",
    "webpack": "^2.1.0-beta.6",
    "webpack-dev-server": "^1.14.1",
    "whatwg-fetch": "^0.11.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.2",
    "eslint": "^2.8.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "http-server": "^0.9.0",
    "stylelint": "^5.4.0",
    "stylelint-config-standard": "^5.0.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "standard",
    "rules": {
      "no-new": 1,
      "valid-jsdoc": [
        2, {
          "requireReturn": false,
          "prefer": {
            "return": "returns"
          }
        }
      ]
    },
    "globals": {
      "fetch": false
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "ignoreFiles": "bundle/**",
    "rules": {
      "at-rule-empty-line-before": [
        "always", {
          "except": [
            "blockless-group",
            "all-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "font-family-name-quotes": "single-where-recommended",
      "function-url-quotes": "single",
      "number-leading-zero": "never",
      "string-quotes": "single"
    }
  }
}
